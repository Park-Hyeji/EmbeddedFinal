<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#1e681a" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content" 
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="#000000">        
            <TextView
		        android:id="@+id/textView1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dp"
		        android:layout_marginLeft="5dp"
		        android:layout_marginRight="5dp"
		        android:textSize="10dp"
		        android:text="CASH"
		        android:textColor="#888888" />
            <TextView
		        android:id="@+id/cashNum"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:layout_marginRight="5dp"
		        android:textSize="10dp"
		        android:gravity="right"
		        android:text="CASH값"
		        android:background="#888888"
		        android:textColor="#ffffff" />
            <TextView
		        android:id="@+id/textView1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:layout_marginRight="5dp"
		        android:textSize="10dp"
		        android:text="BET"
		        android:textColor="#888888" />
            <TextView
		        android:id="@+id/betNum"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="right"
		        android:layout_marginLeft="5dp"
		        android:layout_marginRight="5dp"
		        android:textSize="10dp"
		        android:text="BET값"
		        android:background="#888888"
		        android:layout_marginBottom="5dp"
		        android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:orientation="vertical">
			
            <ListView
                android:id="@+id/dealer"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:background="#fef200"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1" >
            </ListView>
            <TextView
		        android:id="@+id/textView"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:textSize="8dp"
		        android:layout_gravity="right"
		        android:layout_marginTop="3dp"
		        android:layout_marginRight="27dp"
		        android:text="딜러"
		        android:textColor="#fef200" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:gravity="right"
            android:orientation="vertical">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:gravity="right">
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="DECK : "
	                android:textSize="8dp"
	                android:layout_marginTop="5dp"
	                android:layout_marginRight="5dp"
	                android:gravity="right"
	                android:textColor="#000000"
	                />
	            <TextView 
	                android:id="@+id/deckNum"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="8dp"
	                android:layout_marginTop="5dp"
	                android:layout_marginRight="5dp"
	                android:gravity="right"
	                android:textColor="#000000"
	                />
	        </LinearLayout>
            <ListView
                android:id="@+id/dealer"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="#d9b247"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="5dp"
	            android:layout_marginRight="5dp"
                android:layout_weight="1" >
            </ListView>
        </LinearLayout>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        //동적으로 listview생성해야됌
        <LinearLayout
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical" >

	        <ListView
	            android:id="@+id/playerEx"
	            android:layout_width="70dp"
	            android:layout_height="80dp"
	            android:background="#fef200"
	            android:layout_marginLeft="100dp"
	            android:layout_marginTop="30dp"
	            android:layout_marginBottom="5dp">
	        </ListView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp">

        <Button
            android:id="@+id/chip_1"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:textSize="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/circle_border"
            android:text="1" />
        <Button
            android:id="@+id/chip_5"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:textSize="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/circle_border"
            android:text="5" />
        <Button
            android:id="@+id/chip_20"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="5dp"
            android:textSize="10dp"
            android:background="@drawable/circle_border"
            android:text="20" />
        <Button
            android:id="@+id/chip_100"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:textSize="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/circle_border"
            android:text="100" />
        <Button
            android:id="@+id/chip_500"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:textSize="10dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/circle_border"
            android:text="500" />

        <Button
            android:id="@+id/hit"
            android:layout_width="45dp"
            android:layout_height="23dp"
            android:textSize="10dp"
            android:background="@drawable/square_border"
            android:layout_marginRight="5dp"
            android:text="Hit" />
        <Button
            android:id="@+id/Stay"
            android:layout_width="45dp"
            android:layout_height="23dp"
            android:textSize="10dp"
            android:background="@drawable/square_border"
            android:layout_marginRight="5dp"
            android:text="Stay" />
        <Button
            android:id="@+id/Split"
            android:layout_width="45dp"
            android:layout_height="23dp"
            android:textSize="10dp"
            android:background="@drawable/square_border"
            android:layout_marginRight="5dp"
            android:text="Split" />
        <Button
            android:id="@+id/Double"
            android:layout_width="45dp"
            android:layout_height="23dp"
            android:textSize="10dp"
            android:background="@drawable/square_border"
            android:layout_marginRight="5dp"
            android:text="Double" />
        <Button
            android:id="@+id/Insurance"
            android:layout_width="54dp"
            android:layout_height="23dp"
            android:textSize="10dp"
            android:background="@drawable/square_border"
            android:layout_marginRight="5dp"
            android:text="Insurance" />
        <Button
            android:id="@+id/Even_money"
            android:layout_width="65dp"
            android:layout_height="23dp"
            android:textSize="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/square_border"
            android:text="Even money" />

    </LinearLayout>

</LinearLayout>